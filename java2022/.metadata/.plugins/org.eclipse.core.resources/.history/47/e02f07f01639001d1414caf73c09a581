package reCapDemo2;

public class Main {

	public static void main(String[] args) {
		double[] myList = { 1.2, 1.3, 2.4, 4.3 };
		double total = 0;
		double max = myList[0];
	
		System.out.println(max);
		System.out.println("-------------------------------------------");

		for (double number : myList)

		{	if (max < number) {
			max = myList[1];
		}
			total = total + number;
			System.out.println(number);

		

		System.out.println("-------------------------------------------");
		System.out.println("Toplam= " + total);
	}

}
