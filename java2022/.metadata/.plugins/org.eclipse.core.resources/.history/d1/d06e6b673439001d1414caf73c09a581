package arkadasSayilar;

public class Main {

	public static void main(String[] args) {
		int number = 1185;
		int number2 = 1210;
		int total = 0;
		int total2 = 0;

		for (int i = 1; i < number; i++) {
			if (number % i == 0) {
				total = total + i;
			}
		}
		for (int j = 1; j < number2; j++) {
			if (number2 % j == 0) {
				total2 = total2 + j;
			}
		}
		if (total == number2 && total2 == number) {
			System.out.println("İki Sayı arkadaş sayıdır.");
		} else {
			System.out.println("İki Sayı arkadaş sayı değildir.");
		}

		// if (total == number2) {
		// if (total2 == number) {
		// System.out.println("İki Sayı arkadaş sayıdır.");
		// } else {
		// System.out.println("İki Sayı arkadaş sayı değildir.");
		// }
	}
}
